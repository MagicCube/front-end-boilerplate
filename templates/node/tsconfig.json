{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES6",
    "types": ["@types/node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["ESNext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Output */
    "outDir": "./dist",

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [".eslintrc.cjs", "**/*.ts", "**/*.cjs", "**/*.js"],
  "exclude": ["node_modules", "bin"]
}
